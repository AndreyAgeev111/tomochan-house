---
import Header from "../components/layout/astro/Header.astro";
import Footer from "../components/layout/astro/Footer.astro";
import StickyNav from "../components/layout/react/StickyNav";
import StructuredData from "../components/common/astro/StructuredData.astro";
import { siteContent } from "../content/siteContent";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = "ともちゃん家 | 池袋の隠れ家居酒屋",
  description = "猫のともちゃんがお出迎えする、心からくつろげる居酒屋。手作り料理とカラオケ。",
  image = "/og-image.png",
} = Astro.props;

const siteUrl = "https://tomochan-house.jp";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#faf8f3" />
    <meta name="color-scheme" content="light" />

    <!-- Open Graph Meta Tags (Facebook, LINE, etc.) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="business.business" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={new URL(image, siteUrl).href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="ja_JP" />
    <meta property="business:contact_data:street_address" content={siteContent.business.address} />
    <meta property="business:contact_data:locality" content="東京都豊島区" />
    <meta property="business:contact_data:postal_code" content="171-0014" />
    <meta property="business:contact_data:country_name" content="Japan" />

    <!-- Additional Meta Tags -->
    <meta name="apple-mobile-web-app-capable" content="true" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content={siteContent.business.name} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Search Console Verification -->
    <!-- TODO: Replace with your GSC verification code after adding site to GSC -->
    {/* <meta name="google-site-verification" content="YOUR_GSC_VERIFICATION_CODE_HERE" /> */}

    <!-- Google Analytics 4 -->
    <!-- TODO: Replace YOUR_GA4_MEASUREMENT_ID with your actual GA4 measurement ID (format: G-XXXXXXXXXX) -->
    <!-- Can be found in Google Analytics Admin → Data Streams → Select your stream → Measurement ID -->
    {
      /* <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=YOUR_GA4_MEASUREMENT_ID"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'YOUR_GA4_MEASUREMENT_ID', {
        page_path: window.location.pathname,
      });
    </script> */
    }

    <StructuredData />
  </head>
  <body>
    <Header />
    <StickyNav client:load />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
