---
import SectionTitle from "../common/SectionTitle.astro";
import FAQ from "./FAQ";
import ScrollReveal from "../common/ScrollReveal";
import PawPrints from "../common/PawPrints.astro";
import { siteContent } from "../../content/siteContent";

const { contact } = siteContent;
---

<section id="contact" class="py-12 md:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <SectionTitle title="予約・お問い合わせ" subtitle={contact.intro} />

    <!-- Contact CTAs -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">
      {
        contact.ctas.map((cta, i) => (
          <ScrollReveal client:load delay={i * 0.1}>
            <a
              href={cta.href}
              target="_blank"
              rel="noopener noreferrer"
              class="block p-6 md:p-8 bg-gradient-to-br from-warm-100 to-warm-50 rounded-xl shadow-softer hover:shadow-soft transition-shadow border-2 border-warm-200 hover:border-accent-DEFAULT focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-DEFAULT"
            >
              <div class="text-4xl mb-4">{cta.icon}</div>
              <h3 class="text-2xl font-bold text-warm-900 mb-2">
                {cta.method}
              </h3>
              <p class="text-warm-700">{cta.description}</p>
            </a>
          </ScrollReveal>
        ))
      }
    </div>

    <PawPrints />

    <!-- Hours reminder -->
    <div class="bg-accent-light rounded-lg p-6 text-center mb-16">
      <p class="text-warm-900 font-semibold">{contact.hours}</p>
    </div>

    <!-- FAQ Section -->
    <ScrollReveal client:load>
      <div>
        <h3 class="text-3xl font-bold text-warm-900 mb-8 text-center">
          よくある質問
        </h3>
        <FAQ client:load faqItems={contact.faq} />
      </div>
    </ScrollReveal>
  </div>
</section>