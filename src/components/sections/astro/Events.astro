---
import SectionTitle from "../../common/astro/SectionTitle.astro";
import ScrollReveal from "../../common/react/ScrollReveal";
import Calendar from "../react/Calendar";
import { siteContent } from "../../../content/siteContent";

const { events } = siteContent;
---

<section id="events" class="py-12 md:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <SectionTitle title="営業カレンダー・イベント" subtitle={events.intro} />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-12 mb-8 md:mb-12">
      <ScrollReveal client:load>
        <div>
          <h3 class="text-xl md:text-2xl font-bold text-warm-900 mb-4 md:mb-6">今月のイベント</h3>
          <div class="space-y-3 md:space-y-4">
            {
              events.monthlyEvents.map((event) => (
                <div
                  class={`flex gap-3 md:gap-4 p-3 md:p-4 rounded-lg transition-colors ${
                    event.isSpecial
                      ? "bg-accent-light border-l-4 border-accent-dark hover:bg-accent"
                      : "bg-warm-50 hover:bg-warm-100"
                  }`}
                >
                  <span class="text-2xl flex-shrink-0">{event.icon}</span>
                  <div class="flex-1">
                    <a
                      href={event.isSpecial ? "#special-event-card" : undefined}
                      class={event.isSpecial ? "cursor-pointer" : ""}
                    >
                      <p
                        class={`font-bold ${event.isSpecial ? "text-warm-900 hover:underline" : "text-warm-900"}`}
                      >
                        {event.event}
                      </p>
                      <p
                        class={`text-sm ${event.isSpecial ? "text-warm-800 hover:text-warm-900" : "text-warm-700"}`}
                      >
                        {event.date}
                      </p>
                    </a>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </ScrollReveal>

      <ScrollReveal client:load delay={0.1}>
        <Calendar
          client:load
          month={events.calendar.month}
          year={events.calendar.year}
          closedDates={events.calendar.closedDates}
          specialDates={events.calendar.specialDates}
        />
      </ScrollReveal>
    </div>

    {
      events.specialEvent && (
        <ScrollReveal client:load>
          <div
            id="special-event-card"
            class="bg-gradient-to-br from-accent-50 to-warm-50 rounded-2xl overflow-hidden shadow-soft mb-12"
          >
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-8">
              <div class="flex items-center justify-center">
                <img
                  src={events.specialEvent.image}
                  alt={events.specialEvent.title}
                  class="rounded-lg w-full h-auto object-cover shadow-md hover:shadow-lg transition-shadow"
                />
              </div>

              <div>
                <h3 class="text-3xl font-bold text-warm-900 mb-4">{events.specialEvent.title}</h3>
                <p class="text-warm-700 mb-6 leading-relaxed">{events.specialEvent.description}</p>

                <div class="space-y-3 mb-6">
                  {events.specialEvent.details.map((detail) => (
                    <div class="flex gap-3">
                      <span class="text-xl flex-shrink-0">{detail.icon}</span>
                      <div>
                        <p class="font-semibold text-warm-900">{detail.label}</p>
                        <p class="text-sm text-warm-600">{detail.value}</p>
                      </div>
                    </div>
                  ))}
                </div>

                <a
                  href={events.specialEvent.cta.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block bg-accent-dark text-white px-6 py-3 rounded-lg font-semibold hover:bg-warm-800 transition-colors"
                >
                  {events.specialEvent.cta.label}
                </a>
              </div>
            </div>
          </div>
        </ScrollReveal>
      )
    }

    <div class="bg-accent-light rounded-lg p-6 text-center">
      <p class="text-warm-900 font-semibold whitespace-pre-line">{events.note}</p>
    </div>
  </div>
</section>
