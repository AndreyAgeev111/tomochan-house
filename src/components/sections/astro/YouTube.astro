---
import ScrollReveal from "../../common/react/ScrollReveal";
import SectionTitle from "../../common/astro/SectionTitle.astro";
import { siteContent } from "../../../content/siteContent";

const { youtube } = siteContent;
---

<section id="youtube" class="py-12 md:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <SectionTitle title="YouTube" subtitle={youtube.subtitle} />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12">
      <!-- Video Embed -->
      <ScrollReveal client:load>
        <div class="flex items-center justify-center">
          <div
            class="w-full aspect-video rounded-2xl overflow-hidden shadow-soft hover:shadow-lg transition-shadow"
          >
            <iframe
              width="100%"
              height="100%"
              src={youtube.embedUrl}
              title={youtube.title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen></iframe>
          </div>
        </div>
      </ScrollReveal>

      <!-- Content -->
      <ScrollReveal client:load delay={0.1}>
        <div class="flex flex-col justify-center">
          <div class="mb-4">
            <span
              class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-semibold mb-4"
            >
              üé¨ „Éâ„Ç≠„É•„É°„É≥„Çø„É™„Éº
            </span>
            <h3 class="text-3xl md:text-4xl font-bold text-warm-900 mb-2">
              {youtube.channelName}
            </h3>
            <p class="text-sm text-warm-600 mb-4">{youtube.channelDescription}</p>
          </div>

          <p class="text-lg text-warm-700 mb-6 leading-relaxed">{youtube.description}</p>

          <div class="space-y-4 mb-8">
            {
              youtube.highlights.map((highlight) => (
                <div class="flex gap-3">
                  <span class="text-2xl flex-shrink-0">{highlight.icon}</span>
                  <div>
                    <p class="font-semibold text-warm-900">{highlight.title}</p>
                    <p class="text-sm text-warm-600">{highlight.content}</p>
                  </div>
                </div>
              ))
            }
          </div>

          <a
            href={youtube.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-colors hover:shadow-lg"
          >
            <span class="text-xl">‚ñ∂Ô∏è</span>
            <span>YouTube„Åß„ÅîË¶ß„Åè„Å†„Åï„ÅÑ</span>
          </a>
        </div>
      </ScrollReveal>
    </div>
  </div>
</section>
