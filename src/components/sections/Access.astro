---
import ScrollReveal from "../common/ScrollReveal";
import SectionTitle from "../common/SectionTitle.astro";
import MapWithMarker from "./MapWithMarker";
import { siteContent } from "../../content/siteContent";

const { access } = siteContent;
---

<section id="access" class="py-12 md:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <SectionTitle title="„Ç¢„ÇØ„Çª„Çπ" />

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Map with Marker -->
      <ScrollReveal client:load>
        <MapWithMarker
          client:load
          address={access.address}
          latitude={access.latitude}
          longitude={access.longitude}
          mapUrl={access.mapUrl}
          zoom={18}
        />
      </ScrollReveal>

      <!-- Info -->
      <ScrollReveal client:load delay={0.1}>
        <div class="space-y-6">
          <div>
            <h3 class="text-2xl font-bold text-warm-900 mb-2">„Ç¢„ÇØ„Çª„Çπ</h3>
            <p class="text-lg text-warm-700 mb-2">{access.transit}</p>
            <ul class="space-y-2">
              {
                access.directions.map((dir, i) => (
                  <li class="flex gap-3">
                    <span class="font-bold text-accent-DEFAULT min-w-fit">{i + 1}.</span>
                    <span class="text-warm-700">{dir}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="bg-accent-light rounded-lg p-4">
            <p class="text-sm text-warm-700 mb-1">üìç ‰ΩèÊâÄ</p>
            <p class="font-bold text-warm-900">{access.address}</p>
          </div>
        </div>
      </ScrollReveal>
    </div>
  </div>
</section>
